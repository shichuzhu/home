# The following command is required to let zsh parse variable before eval command.
# It solves the ssh $DT and eval ${output} problem
# http://zsh.sourceforge.net/FAQ/zshfaq03.html
setopt shwordsplit

# zmv command to batch rename files
autoload zmv
# zsh extended_glob support reverse selection rm -- ^*.txt
setopt extended_glob

# For zsh-syntax-highlighting
source /usr/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
source /usr/share/zsh/vendor-completions/_tmuxinator

preexec() {
  cmd_start="$SECONDS"
  PS1=$PREV_TEMPLATE
  PS1_RESET=true
}
PREV_TEMPLATE="%* %D$PS1"
PS1_RESET=true
precmd() {
  if [ "$PS1_RESET" = true ]
  then
    local cmd_end="$SECONDS"
    elapsed=$((cmd_end-cmd_start))
    PREV_TEMPLATE=$PS1
  else
    elapsed=0
  fi
  PS1="\$ ${elapsed}s %* %D ${PREV_TEMPLATE}"$'\n'"$ "
  PS1_RESET=false
}

export FLAG_ZSH=True

# Add PATH configurations
export PATH="/home/shichu/usr/anaconda3/bin:$PATH"
